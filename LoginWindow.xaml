<Window x:Class="GradedUnitWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradedUnitWPF"
        mc:Ignorable="d"
        Title="SVHC | Initial Login" Height="300" Width="300" WindowStartupLocation="CenterScreen" Closed="Window_Closed" Background="White">
    <Grid>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Margin="50,54,0,0"/>
        <TextBox x:Name="txtUser" HorizontalAlignment="Left" Height="23" Margin="132,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="54,82,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Margin="132,82,0,0" VerticalAlignment="Top" Width="120" KeyDown="txtPass_KeyDown"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="105,140,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
